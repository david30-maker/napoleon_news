<div class="container after-nav py-3">
  <h1 class="text-center mb-4">Articles For Review</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-primary">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Author</th>
          <th>Last Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @articles_for_review.each_with_index do |article, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= article.title %></td>
            <td><%= article.author.first_name %> <%= article.author.last_name %></td>
            <td><%= article.updated_at.strftime('%d %b %Y, %I:%M %p') %></td>
            <td>
              <div class="d-flex gap-2">
                <%= link_to 'Review', review_article_path(article), class: 'btn btn-sm btn-success' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @articles_for_review, param_name: :under_review_page, anchor: 'under_review' %> 
</div>
<div class="container after-nav py-3">
  <h1 class="text-center mb-4">Published Articles</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-primary">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Author</th>
          <th>Last Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @published_articles.each_with_index do |article, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= article.title %></td>
            <td><%= article.author.first_name %> <%= article.author.last_name %></td>
            <td><%= article.updated_at.strftime('%d %b %Y, %I:%M %p') %></td>
            <td>
              <div class="d-flex gap-2">
                <%= button_to 'Move to Draft', update_status_article_path(article, status: 'draft'), 
                method: :patch,
                data: { confirm: 'Are you sure?', turbo: false },
                class: 'btn btn-sm btn-warning' %>
                <%= button_to 'Delete', article_path(article), 
                method: :delete, 
                data: { confirm: 'Are you sure?' }, 
                class: 'btn btn-sm btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @published_articles, param_name: :published_page, anchor: 'published' %> 
</div>
