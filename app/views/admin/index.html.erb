<div class="container after-nav py-3">
  <h1 class="text-center mb-4"> <%= current_user.role.capitalize %> Dashboard</h1>
  <div class="row justify-content-center">
    <!-- Manage Articles Card -->
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-newspaper fa-3x text-primary mb-3"></i>
          <h5 class="card-title">Manage Articles</h5>
          <p class="card-text">Create, update, and delete articles for your platform.</p>
          <%= link_to 'Go to Articles', "#", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <!-- Manage Users Card -->
    <% if current_user.admin? %>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-users fa-3x text-success mb-3"></i>
          <h5 class="card-title">Manage Users</h5>
          <p class="card-text">View, update roles, or delete users in your application.</p>
          <%= link_to 'Go to Users', users_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
