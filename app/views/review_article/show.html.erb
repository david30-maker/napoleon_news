<div class="after-nav alert alert-info text-center d-flex justify-content-center align-items-center" role="alert" style="height: 60px;">
  <strong class='fs-1'> Review Mode </strong>
</div>
<div class="container article-container">
  <div class="row">
    <div class="col-md-8">
      <!-- Article Header -->
      <div class="row">
        <div class="col-12">
          <h2><%= @article.title %></h2>
          <p class="text-muted">
            By <span class="fw-bold"><%= @article.author.first_name+ ' ' +@article.author.last_name  %></span> â€¢ Last Updated on <span><%= @article.formatted_updated_at  %></span>
          </p>
        </div>
      </div>
      <!-- Article Image -->
      <%# <div class="row">
        <div class="col-12"> %>
          <%# if @article_image_url.present? %>
          <%#= image_tag @article_image_url, alt: "Article Image", class: "img-fluid rounded mb-4" %>
          <%# end %>
        <%# </div>
      </div> %>
      <!-- Tags -->
      <div class="row">
        <div class="col-12 mb-3">
          <% @article.tags.each_with_index do |tag, idx|%>
            <span class="badge <%= @tag_classes[idx] %>" ><%= tag.name.capitalize  %></span>
          <% end %>
        </div>
      </div>
      <div class="row border-bottom mb-2">
        <p class="fst-italic fw-semibold"><%= @article.description %></p>
      </div>
      <!-- Article Body -->
      <div class="row">
        <div class="col-12">
          <%= @article_body %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <!-- Comments Section -->
  <div class="mb-4">
    <h5>Editor Review Comments</h5>  
    <h6> <%= @article.comments.blank? ? 'No' : '' %> Comments</h6>
    <% @article.comments.each do |comment| %>
      <div class="card mb-2">
        <div class="card-body">
          <p><strong><%= comment.author.first_name %> <%= comment.author.last_name %>:</strong></p>
          <p><%= comment.body %></p>
          <span class="badge bg-info text-dark"><%= comment.comment_type&.humanize %></span>
        </div>
      </div>
    <% end %>
  </div>
    </div>
    <div class="row">
      <div class="container mt-5">
        <!-- Share Button -->
        <div class="d-flex align-items-center">
          <i class="fas fa-share-alt fa-2x me-3"></i>
          <!-- Social Media Icons -->
          <div>
            <a href="https://www.facebook.com/sharer/sharer.php?u=#{CGI.escape(article_url(@article))}" class="text-decoration-none text-primary me-3">
              <i class="fab fa-facebook fa-lg"></i>
            </a>
            <a href="https://twitter.com/intent/tweet?url=#{CGI.escape(article_url(@article))}&text=#{CGI.escape(@article.title)}" class="text-decoration-none text-dark me-3">
              <i class="fab fa-x-twitter fa-lg"></i>
            </a>
            <a href="#" class="text-decoration-none text-danger me-3">
              <i class="fab fa-instagram fa-lg"></i>
            </a>
            <a href="https://www.linkedin.com/sharing/share-offsite/?url=#{CGI.escape(article_url(@article))}" class="text-decoration-none text-secondary">
              <i class="fab fa-linkedin fa-lg"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container my-4">
  <h3>Editor Review</h3>
  <!-- Comment Form -->
  <%= form_with(model: [@article, Comment.new], url: article_comments_path(@article), local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :body, "Add a Comment", class: "form-label" %>
      <%= f.text_area :body, class: "form-control", rows: 3 %>
    </div>
    <div class="mb-3">
      <%#= f.label :comment_type, "Comment Type", class: "form-label" %>
      <%#= f.select :comment_type_type, [['Review Comment', 'review_comment']], {}, class: "form-select" %>
      <%= f.hidden_field :comment_type, value: 'review_comment' %>
    </div>
    <%= f.submit "Add Review Comment", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="container">
  <!-- Approve now button -->
  <%= button_to "Approve and Publish Now", 
                 article_path(@article), 
                 method: :patch, 
                 params: { article: { published_at: nil, status: 'published' } },
                 class: "btn btn-success" %>
  <!-- Schedule Trigger Button -->
  <%= button_tag "Approve and Schedule for Later", 
               type: "button", 
               class: "btn btn-warning mt-4", 
               data: { bs_toggle: "modal", bs_target: "#publishModal" } %>
  <!-- Publish Modal -->
  <div class="modal fade" id="publishModal" tabindex="-1" aria-labelledby="publishModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="publishModalLabel">Publish Article</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with(model: @article, url: article_path(@article), method: :patch, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :published_at, "Publish At", class: "form-label" %>
              <%= f.datetime_local_field :published_at, class: "form-control" %>
            </div>
            <%= f.hidden_field :status, value: 'approved' %>
            <div class="d-flex gap-2">
              <%= f.submit "Schedule", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
